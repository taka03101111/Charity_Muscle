<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 日本語テキスト用スタイル -->
    <style name="TextAppearance.Japanese.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Japanese.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Japanese.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Japanese.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- 数字表示用スタイル -->
    <style name="TextAppearance.Japanese.Number" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Japanese.Number.Large" parent="TextAppearance.Japanese.Number">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextAppearance.Japanese.Number.Medium" parent="TextAppearance.Japanese.Number">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.Japanese.Number.Small" parent="TextAppearance.Japanese.Number">
        <item name="android:textSize">24sp</item>
    </style>
</resources>
