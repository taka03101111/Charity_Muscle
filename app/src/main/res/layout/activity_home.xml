<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient"
    tools:context=".ui.home.HomeActivity">

    <!-- スクロール可能なコンテンツ -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ヘッダー部分 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_greeting"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textLocale="ja" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="@string/profile_description" />

            </LinearLayout>

            <!-- 歩数カード -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/card_steps">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_steps"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_steps"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:typeface="sans"
                        android:textLocale="ja"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvCurrentSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_steps"
                        android:textColor="@color/white"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progressSteps"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="75"
                        android:progressTint="@color/white"
                        android:progressBackgroundTint="@color/progress_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvStepsGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/steps_goal"
                        android:textColor="@color/white_70"
                        android:textSize="14sp"
                        android:typeface="sans"
                        android:textLocale="ja" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 運動量カード -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/card_exercise">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_exercise"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_exercise"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:typeface="sans"
                        android:textLocale="ja"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calories"
                                android:textColor="@color/white"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kcal_unit"
                                android:textColor="@color/white_70"
                                android:textSize="14sp"
                                android:typeface="sans"
                                android:textLocale="ja" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/duration"
                                android:textColor="@color/white"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minutes_unit"
                                android:textColor="@color/white_70"
                                android:textSize="14sp"
                                android:typeface="sans"
                                android:textLocale="ja" />

                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressExercise"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="60"
                        android:progressTint="@color/white"
                        android:progressBackgroundTint="@color/progress_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exercise_goal_remaining"
                        android:textColor="@color/white_70"
                        android:textSize="14sp"
                        android:typeface="sans"
                        android:textLocale="ja" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 統計サマリーカード -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/card_summary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly_stats"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:textLocale="ja"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_steps_value"
                                android:textColor="@color/accent_primary"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_steps_label"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp"
                                android:typeface="sans"
                                android:textLocale="ja" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_calories_value"
                                android:textColor="@color/accent_secondary"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_calories_label"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp"
                                android:typeface="sans"
                                android:textLocale="ja" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_duration_value"
                                android:textColor="@color/accent_tertiary"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_duration_label"
                                android:textColor="@color/text_secondary_dark"
                                android:textSize="12sp"
                                android:typeface="sans"
                                android:textLocale="ja" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- クイックアクションボタン -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartWorkout"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/start_workout"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/accent_primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewHistory"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/view_history"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/accent_secondary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_history"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 共通ナビゲーションバーを読み込み -->
    <include layout="@layout/navigation_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
